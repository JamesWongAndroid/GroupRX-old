<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_groupID"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desp"
        android:background="@drawable/ic_image_free_rx_card_templat" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
    
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:gravity="left"
           />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.284" />

        <TextView
            android:id="@+id/textview_groupID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="0.06"
            android:gravity="left"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.057" />


        <TextView
            android:id="@+id/textview_memberID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.06"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.057" />


        <TextView
            android:id="@+id/textview_bin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.06"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.057" />

        <TextView
            android:id="@+id/textview_pcn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.06"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.088" />


        <TextView
            android:id="@+id/textview_help"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.062"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.18" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>